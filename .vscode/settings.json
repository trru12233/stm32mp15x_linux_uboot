{
    // "C_Cpp.intelliSenseEngine": "Disabled",
    "search.exclude": {
        "README": true,
    },

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.repo":true,
        "**/*.su":true,
        "**/*.cmd":true,
        "**/*.gitignore":true,
        ".config.old":true,
        "*README*":true,
        "fs/":true,
        "Doc*/":true,
        "doc/":true,
        "Licenses/":true,

        "arch/a[a-q]*/":true,
        "arch/arc/":true,
        "arch/Kconfig":true,
        // "arch/arm64/":true,
        "arch/[c-z]*/":true,
        "arch/arm/cpu/":true,
        "arch/arm/[e-z]*":true,
        "arch/arm/Kconfig":true,
        "arch/arm/Makefile":true,
        "arch/arm/*.*":true,
        "arch/arm/dts/[a-r]*":true,
        "arch/arm/dts/[t-z]*":true,
        "arch/arm/dts/s[0-9]*":true,
        "arch/arm/dts/s[a-s]*":true,
        "arch/arm/dts/s[u-z]*":true,
        "arch/arm/dts/st[a-l]*":true,
        "arch/arm/dts/stm32[a-l]*":true,
        // "arch/arm/crypto*":true,
        // "arch/arm/common":true,
        // "arch/arm/Kconfig*":true,
        // "arch/arm/Makefile":true,
        "configs/[0-9]*":true,
        "configs/[A-Z]*":true,
        "configs/[a-r]*":true,
        "configs/[t-z]*":true,
        "configs/s[0-9]*":true,
        "configs/s[a-s]*":true,
        "configs/s[u-z]*":true,
        "configs/st[a-l]*":true,
        "configs/st[n-z]*":true,
        "configs/stm32[a-l]*":true,
        "configs/stm32mp15*":true,
        "configs/stmark2_defconfig":true,
    },
    "files.associations": {
        "*.S": "c",
        ".config": "makefile",
        "*_defconfig": "makefile",
        "*.h": "c"
    }
}